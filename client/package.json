{
    "name": "viper-advanced",
    "displayName": "Viper Advanced",
    "version": "0.5.409",
    "publisher": "rukaelin",
    "description": "Facilitates the development of viper programs",
    "homepage": "http://www.pm.inf.ethz.ch/research/viper.html",
    "license": "MIT",
    "repository": "bitbucket:viperproject/viper-ide",
    "bugs": "https://bitbucket.org/viperproject/viper-ide/issues",
    "author": {
        "name": "Viper Team",
        "email": "viper@inf.ethz.ch",
        "url": "http://www.pm.inf.ethz.ch/people.html"
    },
    "main": "./out/extension",
    "engines": {
        "vscode": "^1.4.0",
        "node": "^4.1.1"
    },
    "icon": "images/icon_bright_orange_avatar.png",
    "categories": [
        "Languages",
        "Other",
        "Themes",
        "Snippets",
        "Debuggers"
    ],
    "dependencies": {
        "vscode-languageclient": "^2.2.1",
        "vscode-languageserver": "^2.2.0",
        "vscode-debugprotocol": "^1.9.0",
        "vscode-debugadapter": "^1.9.0",
        "vscode-uri": "^0.0.3",
        "node-ipc": "^7.0.0",
        "command-exists": "^1.0.1",
        "viz.js": "^1.7.0",
        "tree-kill": "^1.1.0",
        "portfinder": "1.0.13",
        "unused-filename": "0.1.0",
        "mkdirp": "0.5.1",
        "adm-zip": "^0.4.7",
        "glob-to-regexp": "^0.3.0"
    },
    "devDependencies": {
        "typescript": "^2.2.1",
        "vscode": "^0.11.13",
        "vscode-debugadapter-testsupport": "^1.9.0"
    },
    "scripts": {
        "compile": "npm run compileServer && tsc -p ./",
        "watch": "tsc -w -p ./",
        "prepublish": "npm run prepublishServer && node ./node_modules/vscode/bin/install && npm run compile",
        "test": "node ./node_modules/vscode/bin/test",
        "compileServer": "cd ../server && npm run compile && cd ../client",
        "prepublishServer": "cd ../server && npm install && cd ../client"
    },
    "activationEvents": [
        "onLanguage:viper"
    ],
    "contributes": {
        "commands": [{
                "command": "extension.verify",
                "title": "Viper: verify the open document"
            },
            {
                "command": "extension.selectBackend",
                "title": "Viper: select verification backend"
            },
            {
                "command": "extension.stopVerification",
                "title": "Viper: stop the running verification"
            },
            {
                "command": "extension.startDebugging",
                "title": "Viper: debug the open document"
            },
            {
                "command": "extension.toggleAutoVerify",
                "title": "Viper: toggle the automatic verification of viper files"
            },
            {
                "command": "extension.openLogFile",
                "title": "Viper: open the current logFile"
            },
            {
                "command": "extension.verifyAllFilesInWorkspace",
                "title": "Viper: verify all files in the open workspace"
            },
            {
                "command": "extension.showAllStates",
                "title": "Viper: show all state markers"
            },
            {
                "command": "extension.removeDiagnostics",
                "title": "Viper: Remove the Diagnostics from the current file."
            },
            {
                "command": "extension.updateViperTools",
                "title": "Viper: Install the newest version of Viper Tools."
            }
        ],
        "grammars": [{
                "language": "viper",
                "scopeName": "source.silver",
                "path": "./syntaxes/Viper.tmLanguage"
            },
            {
                "language": "log",
                "scopeName": "bmcode.log",
                "path": "./syntaxes/log.tmLanguage"
            }
        ],
        "languages": [{
                "id": "viper",
                "extensions": [
                    ".sil",
                    ".vpr"
                ],
                "aliases": [
                    "Viper"
                ],
                "configuration": "./syntaxes/viper-configuration.json"
            },
            {
                "id": "log",
                "extensions": [
                    ".log"
                ],
                "configuration": "./syntaxes/log-configuration.json",
                "mimetypes": [
                    "text/x-code-output"
                ]
            }
        ],
        "themes": [{
                "label": "Viper-Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/Viper (Dark).tmTheme"
            },
            {
                "label": "Viper-Light",
                "uiTheme": "vs",
                "path": "./themes/Viper (Light).tmTheme"
            }
        ],
        "snippets": [{
            "language": "viper",
            "path": "./snippets/viper.json"
        }],
        "keybindings": [{
                "command": "extension.selectBackend",
                "key": "ctrl+l",
                "mac": "cmd+l",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.verify",
                "key": "f5",
                "mac": "f5",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.stopVerification",
                "key": "ctrl+h",
                "mac": "cmd+h",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.startDebugging",
                "key": "ctrl+d",
                "mac": "cmd+d",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.format",
                "key": "alt+shift+f",
                "mac": "alt+shift+f",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Viper Configuration",
            "properties": {
                "viperSettings.nailgunSettings": {
                    "type": "object",
                    "default": {
                        "v": "0.5.406",
                        "serverJar": "$viperTools$/nailgun/nailgun.jar",
                        "clientExecutable": "$viperTools$/nailgun/ng",
                        "port": "*",
                        "timeout": 3000
                    },
                    "description": "All Nailgun related settings. The Nailgun port can be referred to by $nailgunPort$. set the port to * to use a random free port"
                },
                "viperSettings.verificationBackends": {
                    "type": "array",
                    "default": [{
                            "v": "0.5.406",
                            "name": "silicon",
                            "paths": [
                                "$viperTools$/backends/silicon.jar"
                            ],
                            "useNailgun": true,
                            "timeout": 100000,
                            "stages": [{
                                "name": "verify",
                                "isVerification": true,
                                "mainMethod": "viper.silicon.SiliconRunner",
                                "customArguments": "--ideMode --ideModeAdvanced --z3Exe $z3Exe$ $fileToVerify$"
                            }]
                        },
                        {
                            "v": "0.5.406",
                            "name": "carbon",
                            "paths": [
                                "$viperTools$/backends/carbon.jar"
                            ],
                            "useNailgun": true,
                            "timeout": 100000,
                            "stages": [{
                                "name": "verify",
                                "isVerification": true,
                                "mainMethod": "viper.carbon.Carbon",
                                "customArguments": "--z3Exe $z3Exe$ --boogieExe $boogieExe$ $fileToVerify$"
                            }]
                        }
                    ],
                    "description": "You can add your backends here."
                },
                "viperSettings.paths": {
                    "type": "object",
                    "default": {
                        "v": "0.5.406",
                        "viperToolsPath": {
                            "windows": "%ProgramFiles%\\Viper\\",
                            "linux": "/usr/local/Viper",
                            "mac": "/usr/local/Viper"
                        },
                        "z3Executable": {
                            "windows": "$viperTools$/z3/bin/z3.exe",
                            "linux": "$viperTools$/z3/bin/z3",
                            "mac": "$viperTools$/z3/bin/z3"
                        },
                        "boogieExecutable": {
                            "windows": "$viperTools$/boogie/Binaries/Boogie.exe",
                            "linux": "$viperTools$/boogie/Binaries/Boogie.exe",
                            "mac": "$viperTools$/boogie/Binaries/Boogie"
                        }
                    },
                    "description": "Paths to the dependencies."
                },
                "viperSettings.preferences": {
                    "type": "object",
                    "default": {
                        "v": "0.5.406",
                        "autoSave": true,
                        "logLevel": 1,
                        "autoVerifyAfterBackendChange": true,
                        "showProgress": true,
                        "viperToolsProvider": {
                            "windows": "http://viper.ethz.ch/downloads/ViperToolsWin.zip",
                            "linux": "http://viper.ethz.ch/downloads/ViperToolsLinux.zip",
                            "mac": "http://viper.ethz.ch/downloads/ViperToolsMac.zip"
                        }
                    },
                    "description": "General user preferences."
                },
                "viperSettings.javaSettings": {
                    "type": "object",
                    "default": {
                        "v": "0.5.406",
                        "customArguments": "-Xmx2048m -Xss16m -cp $backendPaths$"
                    },
                    "description": "Settings used for running Java commands."
                },
                "viperSettings.advancedFeatures": {
                    "type": "object",
                    "default": {
                        "v": "0.5.406",
                        "enabled": true,
                        "showSymbolicState": false,
                        "simpleMode": true,
                        "darkGraphs": true,
                        "showOldState": true,
                        "showPartialExecutionTree": true,
                        "compareStates": true,
                        "verificationBufferSize": 102400
                    },
                    "description": "Settings concerning the advanced features."
                }
            }
        },
        "debuggers": [{
            "type": "viper",
            "label": "Viper Debug",
            "enableBreakpointsFor": {
                "languageIds": [
                    "viper"
                ]
            },
            "program": "./out/debug.js",
            "runtime": "node",
            "configurationAttributes": {
                "launch": {
                    "required": [
                        "program"
                    ],
                    "properties": {
                        "program": {
                            "type": "string",
                            "description": "Path to a viper source file.",
                            "default": "${workspaceRoot}/sum.sil"
                        },
                        "startInState": {
                            "type": "int",
                            "description": "",
                            "default": true
                        }
                    }
                }
            }
        }]
    }
}