{
    "name": "viper",
    "displayName": "Viper",
    "version": "0.0.10",
    "publisher": "rukaelin",
    "description": "Facilitates the development of viper programs",
    "license": "MIT",
    "repository": {
        "type": "hg",
        "url": "https://bitbucket.org/viperproject/viper-ide"
    },
    "author": {
        "name": "Ruben KÃ¤lin",
        "email": "rukaelin@student.ethz.ch"
    },
    "engines": {
        "vscode": "^1.0.0",
        "node": "^4.1.1"
    },
    "icon": "images/icon_bright_orange_avatar.png",
    "categories": [
        "Languages",
        "Other",
        "Themes",
        "Snippets",
        "Debuggers"
    ],
    "dependencies": {
        "vscode-languageclient": "^2.2.1",
        "vscode-languageserver": "^2.2.0",
        "vscode-debugprotocol": "^1.9.0",
        "vscode-debugadapter": "^1.9.0",
        "ps-node": "^0.1.1",
        "vscode-uri": "^0.0.3",
        "node-ipc": "^7.0.0",
        "command-exists": "^1.0.1"
    },
    "devDependencies": {
        "typescript": "^1.8.10",
        "mocha": "^2.5.3",
        "vscode": "^0.11.13",
        "vscode-debugadapter-testsupport": "^1.9.0"
    },
    "scripts": {
        "compile": "node ./node_modules/typescript/bin/tsc -p ./",
        "watch": "node ./node_modules/typescript/bin/tsc -w -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:viper"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.verify",
                "title": "Viper: verify the open document"
            },
            {
                "command": "extension.selectBackend",
                "title": "Viper: select verification backend"
            },
            {
                "command": "extension.stopVerification",
                "title": "Viper: stop the running verification"
            }
        ],
        "grammars": [
            {
                "language": "viper",
                "scopeName": "source.silver",
                "path": "./syntaxes/Viper.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "viper",
                "extensions": [
                    ".sil",
                    ".vpr"
                ],
                "aliases": [
                    "Viper"
                ]
            }
        ],
        "themes": [
            {
                "label": "Viper-Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/Viper (Dark).tmTheme"
            },
            {
                "label": "Viper-Light",
                "uiTheme": "vs",
                "path": "./themes/Viper (Light).tmTheme"
            }
        ],
        "snippets": [
            {
                "language": "viper",
                "path": "./snippets/viper.json"
            }
        ],
        "keybindings": [
            {
                "command": "extension.selectBackend",
                "key": "ctrl+l",
                "mac": "cmd+l",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.verify",
                "key": "f5",
                "mac": "f5",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.stopVerification",
                "key": "ctrl+h",
                "mac": "cmd+h",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Viper Configuration",
            "properties": {
                "viperSettings.verificationBackends": {
                    "type": "array",
                    "default": [
                        {
                            "name": "silicon",
                            "paths": [
                                "%SILICON_JAR%"
                            ],
                            "mainMethod": "viper.silicon.SiliconRunner",
                            "getTrace": true,
                            "customArguments": ""
                        }
                    ],
                    "description": "You can add your backend here.\n    // The first backend in the array will be used for verification.\n    // Use %ENV_VAR% for environment variables and C:\\\\path\\\\to\\\\file.jar for paths."
                },
                "viperSettings.nailgunServerJar": {
                    "type": "string",
                    "default": "%NAILGUN_SERVER_JAR%",
                    "description": "The path to the nailgun server jar or the folder containg the jars.\n    // Use %ENV_VAR% for environment variables and C:\\\\path\\\\to\\\\file.jar for paths."
                },
                "viperSettings.nailgunClient": {
                    "type": "string",
                    "default": "ng",
                    "description": "The path to the nailgun client executable.\n    // Use %ENV_VAR% for environment variables, C:\\\\path\\\\to\\\\file.jar for paths, or ng if its folder is in the PATH environment variable."
                },
                "viperSettings.z3Executable": {
                    "type": "string",
                    "default": "z3",
                    "description": "The path to the z3 executable.\n    // Use %ENV_VAR% for environment variables, C:\\\\path\\\\to\\\\file.jar for paths, or z3 if its folder is in the PATH environment variable."
                },
                "viperSettings.autoSave": {
                    "type": "boolean",
                    "default": true
                },
                "viperSettings.nailgunPort": {
                    "type": "string",
                    "default": "7654"
                },
                "viperSettings.logLevel": {
                    "type": "number",
                    "default": 1,
                    "description": "None = 0, Default = 1, Info = 2 Verbose = 3, Debug = 4, LowLevelDebug = 5"
                }
            }
        },
        "debuggers": [
            {
                "type": "viper",
                "label": "Viper Debug",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "viper"
                    ]
                },
                "program": "./out/debug.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to a viper source file.",
                                "default": "${workspaceRoot}/sum.sil"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Viper Debug",
                        "type": "viper",
                        "request": "launch",
                        "program": "${workspaceRoot}/sum.sil",
                        "stopOnEntry": true
                    }
                ]
            }
        ]
    }
}