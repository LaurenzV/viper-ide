{
    "name": "viper-advanced",
    "displayName": "Viper Advanced",
    "version": "0.2.5",
    "publisher": "rukaelin",
    "description": "Facilitates the development of viper programs",
    "license": "MIT",
    "repository": {
        "type": "hg",
        "url": "https://bitbucket.org/viperproject/viper-ide"
    },
    "author": {
        "name": "Ruben KÃ¤lin",
        "email": "rukaelin@student.ethz.ch"
    },
    "engines": {
        "vscode": "^1.3.0",
        "node": "^4.1.1"
    },
    "icon": "images/icon_bright_orange_avatar.png",
    "categories": [
        "Languages",
        "Other",
        "Themes",
        "Snippets",
        "Debuggers"
    ],
    "dependencies": {
        "vscode-languageclient": "^2.2.1",
        "vscode-languageserver": "^2.2.0",
        "vscode-debugprotocol": "^1.9.0",
        "vscode-debugadapter": "^1.9.0",
        "ps-node": "^0.1.1",
        "vscode-uri": "^0.0.3",
        "node-ipc": "^7.0.0",
        "command-exists": "^1.0.1",
        "graphviz": "^0.0.8"
    },
    "devDependencies": {
        "typescript": "^1.8.10",
        "mocha": "^2.5.3",
        "vscode": "^0.11.13",
        "vscode-debugadapter-testsupport": "^1.9.0"
    },
    "scripts": {
        "compile": "node ./node_modules/typescript/bin/tsc -p ./",
        "watch": "node ./node_modules/typescript/bin/tsc -w -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:viper"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.verify",
                "title": "Viper: verify the open document"
            },
            {
                "command": "extension.selectBackend",
                "title": "Viper: select verification backend"
            },
            {
                "command": "extension.stopVerification",
                "title": "Viper: stop the running verification"
            },
            {
                "command": "extension.startDebugging",
                "title": "Viper: debug the open document"
            }
        ],
        "grammars": [
            {
                "language": "viper",
                "scopeName": "source.silver",
                "path": "./syntaxes/Viper.tmLanguage"
            },
            {
                "language": "log",
                "scopeName": "bmcode.log",
                "path": "./syntaxes/log.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "viper",
                "extensions": [
                    ".sil",
                    ".vpr"
                ],
                "aliases": [
                    "Viper"
                ]
            },
            {
                "id": "log",
                "extensions": [
                    ".log"
                ],
                "configuration": "./log.configuration.json",
                "mimetypes": [
                    "text/x-code-output"
                ]
            }
        ],
        "themes": [
            {
                "label": "Viper-Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/Viper (Dark).tmTheme"
            },
            {
                "label": "Viper-Light",
                "uiTheme": "vs",
                "path": "./themes/Viper (Light).tmTheme"
            }
        ],
        "snippets": [
            {
                "language": "viper",
                "path": "./snippets/viper.json"
            }
        ],
        "keybindings": [
            {
                "command": "extension.selectBackend",
                "key": "ctrl+l",
                "mac": "cmd+l",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.verify",
                "key": "f5",
                "mac": "f5",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.stopVerification",
                "key": "ctrl+h",
                "mac": "cmd+h",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.startDebugging",
                "key": "ctrl+d",
                "mac": "cmd+d",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.format",
                "key": "alt+shift+f",
                "mac": "alt+shift+f",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Viper Configuration",
            "properties": {
                "viperSettings.verificationBackends": {
                    "type": "array",
                    "default": [
                        {
                            "name": "silicon",
                            "paths": [
                                "%SILICON_JAR%"
                            ],
                            "stages": [
                                {
                                    "name": "verify",
                                    "isVerification": true,
                                    "mainMethod": "viper.silicon.SiliconRunner",
                                    "customArguments": "--nailgun-port $nailgunPort$ $mainMethod$ --ideMode --z3Exe $z3Exe$ $fileToVerify$",
                                    "onParsingError": "",
                                    "onTypeCheckingError": "",
                                    "onVerificationError": "",
                                    "onSuccess": ""
                                }
                            ]
                        }
                    ],
                    "description": "You can add your backends here.\n    // The first stage of the first backend in the array will be used for verification by default.\n    // Use %ENV_VAR% for environment variables and C:\\\\path\\\\to\\\\file.jar for paths."
                },
                "viperSettings.nailgunServerJar": {
                    "type": "string",
                    "default": "%NAILGUN_SERVER_JAR%",
                    "description": "The path to the nailgun server jar or the folder containg the jars.\n    // Use %ENV_VAR% for environment variables and C:\\\\path\\\\to\\\\file.jar for paths."
                },
                "viperSettings.nailgunClient": {
                    "type": "string",
                    "default": "ng",
                    "description": "The path to the nailgun client executable.\n    // Use %ENV_VAR% for environment variables, C:\\\\path\\\\to\\\\ng.exe for paths, or ng if its folder is in the PATH environment variable."
                },
                "viperSettings.z3Executable": {
                    "type": "string",
                    "default": "z3",
                    "description": "The path to the z3 executable.\n    // Use %ENV_VAR% for environment variables, C:\\\\path\\\\to\\\\z3.exe for paths, or z3 if its folder is in the PATH environment variable."
                },
                "viperSettings.autoSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable automatically saving modified viper files"
                },
                "viperSettings.useNailgun": {
                    "type": "boolean",
                    "default": true,
                    "description": "Should the verification use nailgun to speed up the verification? without nailgun each verification needs to start a instance of the Java Virtual Machine.\n    // When disabling nailgun use the following settings as custom arguments: -Xmx2048m -Xss16m -cp $backendPaths$ $mainMethod$ --ideMode --z3Exe $z3Exe$ $fileToVerify$"
                },
                "viperSettings.nailgunPort": {
                    "type": "string",
                    "default": "7654",
                    "description": "The port on which the nailgun server communicates with the nailgun client."
                },
                "viperSettings.logLevel": {
                    "type": "number",
                    "default": 1,
                    "description": "None = 0, Default = 1, Info = 2 Verbose = 3, Debug = 4, LowLevelDebug = 5"
                },
                "viperSettings.autoVerifyAfterBackendChange": {
                    "type": "boolean",
                    "default": true,
                    "description": "Reverify the open viper file upon backend change."
                },
                "viperSettings.showProgress": {
                    "type": "boolean",
                    "default": false,
                    "description": "Display the verification progress in the status bar. Only useful if the backend supports progress reporting."
                },
                "viperSettings.advancedFeatures": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable heap visualization, stepwise debugging and execution path visualization"
                },
                "viperSettings.dotExecutable": {
                    "type": "string",
                    "default": "dot",
                    "description": "The path to the dot executable.\n    // Use %ENV_VAR% for environment variables, C:\\\\path\\\\to\\\\dot.exe for paths, or z3 if its folder is in the PATH environment variable."
                },
                "viperSettings.showSymbolicState": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the symbolic values in the heap visualization. If disabled, the symbolic values are only shown in the error states."
                },
                "viperSettings.darkGraphs": {
                    "type": "boolean",
                    "default": true,
                    "description": "To get the best visual heap representation, this setting should match with the active theme."
                },
                "viperSettings.nailgunTimeout": {
                    "type": "number",
                    "default": 3000,
                    "description": "The time in ms after which the nailgun server start is considered to have failed."
                },
                "viperSettings.verificationTimeout": {
                    "type": "number",
                    "default": 20000,
                    "description": "The time in ms after which a verification is considered to have failed."
                }
            }
        },
        "debuggers": [
            {
                "type": "viper",
                "label": "Viper Debug",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "viper"
                    ]
                },
                "program": "./out/debug.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to a viper source file.",
                                "default": "${workspaceRoot}/sum.sil"
                            },
                            "startInState": {
                                "type": "int",
                                "description": "",
                                "default": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Viper Debug",
                        "type": "viper",
                        "request": "launch",
                        "program": "${workspaceRoot}/sum.sil",
                        "stopOnEntry": true
                    }
                ]
            }
        ]
    }
}