{
    "name": "viper-advanced",
    "displayName": "Viper Advanced",
    "version": "0.2.12",
    "publisher": "rukaelin",
    "description": "Facilitates the development of viper programs",
    "license": "MIT",
    "repository": {
        "type": "hg",
        "url": "https://bitbucket.org/viperproject/viper-ide"
    },
    "author": {
        "name": "Ruben KÃ¤lin",
        "email": "rukaelin@student.ethz.ch"
    },
    "engines": {
        "vscode": "^1.3.0",
        "node": "^4.1.1"
    },
    "icon": "images/icon_bright_orange_avatar.png",
    "categories": [
        "Languages",
        "Other",
        "Themes",
        "Snippets",
        "Debuggers"
    ],
    "dependencies": {
        "vscode-languageclient": "^2.2.1",
        "vscode-languageserver": "^2.2.0",
        "vscode-debugprotocol": "^1.9.0",
        "vscode-debugadapter": "^1.9.0",
        "ps-node": "^0.1.1",
        "vscode-uri": "^0.0.3",
        "node-ipc": "^7.0.0",
        "command-exists": "^1.0.1",
        "graphviz": "^0.0.8"
    },
    "devDependencies": {
        "typescript": "^1.8.10",
        "mocha": "^2.5.3",
        "vscode": "^0.11.13",
        "vscode-debugadapter-testsupport": "^1.9.0"
    },
    "scripts": {
        "compile": "node ./node_modules/typescript/bin/tsc -p ./",
        "watch": "node ./node_modules/typescript/bin/tsc -w -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:viper"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.verify",
                "title": "Viper: verify the open document"
            },
            {
                "command": "extension.selectBackend",
                "title": "Viper: select verification backend"
            },
            {
                "command": "extension.stopVerification",
                "title": "Viper: stop the running verification"
            },
            {
                "command": "extension.startDebugging",
                "title": "Viper: debug the open document"
            },
            {
                "command": "extension.toggleAutoVerify",
                "title": "Viper: toggle the automatic verification of viper files"
            }
        ],
        "grammars": [
            {
                "language": "viper",
                "scopeName": "source.silver",
                "path": "./syntaxes/Viper.tmLanguage"
            },
            {
                "language": "log",
                "scopeName": "bmcode.log",
                "path": "./syntaxes/log.tmLanguage"
            }
        ],
        "languages": [
            {
                "id": "viper",
                "extensions": [
                    ".sil",
                    ".vpr"
                ],
                "aliases": [
                    "Viper"
                ]
            },
            {
                "id": "log",
                "extensions": [
                    ".log"
                ],
                "configuration": "./log.configuration.json",
                "mimetypes": [
                    "text/x-code-output"
                ]
            }
        ],
        "themes": [
            {
                "label": "Viper-Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/Viper (Dark).tmTheme"
            },
            {
                "label": "Viper-Light",
                "uiTheme": "vs",
                "path": "./themes/Viper (Light).tmTheme"
            }
        ],
        "snippets": [
            {
                "language": "viper",
                "path": "./snippets/viper.json"
            }
        ],
        "keybindings": [
            {
                "command": "extension.selectBackend",
                "key": "ctrl+l",
                "mac": "cmd+l",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.verify",
                "key": "f5",
                "mac": "f5",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.stopVerification",
                "key": "ctrl+h",
                "mac": "cmd+h",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.startDebugging",
                "key": "ctrl+d",
                "mac": "cmd+d",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.format",
                "key": "alt+shift+f",
                "mac": "alt+shift+f",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Viper Configuration",
            "properties": {
                "viperSettings.viperToolsPath": {
                    "type": "string",
                    "default": "$defaultViperToolsPath$",
                    "description": "Path to the folder containing all the ViperTools:\n    // The default is:\n    // Windows: %programfiles%\\Viper\\\n    // Mac: /usr/local/Viper/\n    // Linux: /usr/local/Viper/\n    // Can be refered to by $viperTools$\n    //\n    // For all path you can use absolute paths, paths relative to the folder open in VsCode, %ENV_VAR% for environment variables, or e.g.: z3 or ng if its folder is in the PATH environment variable."
                },
                "viperSettings.nailgunSettings": {
                    "type": "object",
                    "default": {
                        "serverJar": "$viperTools$/nailgun/nailgun.jar",
                        "clientExecutable": "$viperTools$/nailgun/ng",
                        "port": "7654",
                        "timeout": 3000
                    },
                    "description": "All nailgun related settings. The nailgun port can be refered to by $nailgunPort$"
                },
                "viperSettings.verificationBackends": {
                    "type": "array",
                    "default": [
                        {
                            "name": "silicon",
                            "paths": [
                                "$viperTools$/backends/silicon.jar"
                            ],
                            "useNailgun": true,
                            "timeout": 100000,
                            "stages": [
                                {
                                    "name": "verify",
                                    "isVerification": true,
                                    "mainMethod": "viper.silicon.SiliconRunner",
                                    "customArguments": "--nailgun-port $nailgunPort$ $mainMethod$ --ideMode --ideModeAdvanced --z3Exe $z3Exe$ $fileToVerify$",
                                    "onParsingError": "",
                                    "onTypeCheckingError": "",
                                    "onVerificationError": "",
                                    "onSuccess": ""
                                }
                            ]
                        },
                        {
                            "name": "silicon with infer",
                            "paths": [
                                "$viperTools$/backends/silicon.jar",
                                "$viperTools$/backends/infer.jar"
                            ],
                            "useNailgun": true,
                            "timeout": 100000,
                            "stages": [
                                {
                                    "name": "verify",
                                    "isVerification": true,
                                    "mainMethod": "viper.silicon.SiliconRunner",
                                    "customArguments": "--nailgun-port $nailgunPort$ $mainMethod$ --ideMode --ideModeAdvanced --z3Exe $z3Exe$ $fileToVerify$",
                                    "onParsingError": "",
                                    "onTypeCheckingError": "",
                                    "onVerificationError": "infer",
                                    "onSuccess": ""
                                },
                                {
                                    "name": "infer",
                                    "isVerification": false,
                                    "mainMethod": "ch.ethz.inf.pm.sample.permissionanalysis.Main",
                                    "customArguments": "--nailgun-port $nailgunPort$ $mainMethod$ $fileToVerify$",
                                    "onParsingError": "",
                                    "onTypeCheckingError": "",
                                    "onVerificationError": "",
                                    "onSuccess": "verify"
                                }
                            ]
                        },
                        {
                            "name": "carbon_no_nailgun",
                            "paths": [
                                "$viperTools$/backends/carbon.jar"
                            ],
                            "useNailgun": false,
                            "timeout": 100000,
                            "stages": [
                                {
                                    "name": "verify",
                                    "isVerification": true,
                                    "mainMethod": "viper.silicon.SiliconRunner",
                                    "customArguments": "-Xmx2048m -Xss16m -cp $backendPaths$ $mainMethod$ --z3Exe $z3Exe$ --boogieExe $boogieExe$ $fileToVerify$",
                                    "onParsingError": "",
                                    "onTypeCheckingError": "",
                                    "onVerificationError": "",
                                    "onSuccess": ""
                                }
                            ]
                        }
                    ],
                    "description": "You can add your backends here."
                },
                "viperSettings.z3Executable": {
                    "type": "string",
                    "default": "$viperTools$/z3/bin/z3",
                    "description": "The path to the z3 executable. Can be refered to by $z3Exe$"
                },
                "viperSettings.boogieExecutable": {
                    "type": "string",
                    "default": "$viperTools$/boogie/Binaries/Boogie",
                    "description": "The path to the boogie executable. Can be refered to by $boogieExe$"
                },
                "viperSettings.autoSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable automatically saving modified viper files"
                },
                "viperSettings.logLevel": {
                    "type": "number",
                    "default": 1,
                    "description": "None = 0, Default = 1, Info = 2 Verbose = 3, Debug = 4, LowLevelDebug = 5"
                },
                "viperSettings.autoVerifyAfterBackendChange": {
                    "type": "boolean",
                    "default": true,
                    "description": "Reverify the open viper file upon backend change."
                },
                "viperSettings.showProgress": {
                    "type": "boolean",
                    "default": false,
                    "description": "Display the verification progress in the status bar. Only useful if the backend supports progress reporting."
                },
                "viperSettings.advancedFeatures": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable heap visualization, stepwise debugging and execution path visualization"
                },
                "viperSettings.dotExecutable": {
                    "type": "string",
                    "default": "$viperTools$/dot/dot",
                    "description": "The path to the dot executable."
                },
                "viperSettings.showSymbolicState": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the symbolic values in the heap visualization. If disabled, the symbolic values are only shown in the error states."
                },
                "viperSettings.darkGraphs": {
                    "type": "boolean",
                    "default": true,
                    "description": "To get the best visual heap representation, this setting should match with the active theme."
                },
                "viperSettings.simpleMode": {
                    "type": "boolean",
                    "default": true,
                    "description": "Useful for verifying programs. Disable when developing the backend"
                },
                "viperSettings.verificationBufferSize": {
                    "type": "number",
                    "default": 1024,
                    "description": "Maximal buffer size for verification in KB"
                }
            }
        },
        "debuggers": [
            {
                "type": "viper",
                "label": "Viper Debug",
                "enableBreakpointsFor": {
                    "languageIds": [
                        "viper"
                    ]
                },
                "program": "./out/debug.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to a viper source file.",
                                "default": "${workspaceRoot}/sum.sil"
                            },
                            "startInState": {
                                "type": "int",
                                "description": "",
                                "default": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Viper Debug",
                        "type": "viper",
                        "request": "launch",
                        "program": "${workspaceRoot}/sum.sil",
                        "stopOnEntry": true
                    }
                ]
            }
        ]
    }
}